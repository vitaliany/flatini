    <button type="button" class="btn btn-warning btn-sm" id="preserve">Запас 10%</button>
    <input type="hidden" value="0.1089" id="kratnost"/><br/>
    <input type="hidden" value="1080" id="price"/><br/>
    <input type="hidden" value="1" id="unit" /><br/>
